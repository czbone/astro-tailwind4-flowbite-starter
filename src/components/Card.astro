---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="list-none flex p-[1px] bg-gray-800 rounded-lg transition-all duration-300 hover:scale-[1.02] shadow-[inset_0_0_0_1px_rgba(255,255,255,0.1)] hover:shadow-xl">
	<a href={href} class="w-full no-underline leading-relaxed p-6 rounded-lg text-white bg-gray-800/90 hover:bg-gray-800/50">
		<h2 class="m-0 text-xl transition-colors duration-300">
			{title}
			<span>&rarr;</span>
		</h2>
		<p class="mt-2 mb-0">
			{body}
		</p>
	</a>
</li>